@page
@model AddPirateCrewModel

@{
    ViewData["Title"] = "Add Pirate Crew";
}

<h1>Create A Pirate Crew</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="PirateCrew.PirateID" class="control-label"></label>
                <select asp-for="PirateCrew.PirateID" asp-items="Model.PiratesDropDown" class="form-control">
                    <option value="">--Select Pirate--</option> 
                </select>
                <span asp-validation-for="PirateCrew.PirateID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PirateCrew.CrewName" class="control-label"></label>
                <input asp-for="PirateCrew.CrewName" class="form-control" />
                <span asp-validation-for="PirateCrew.CrewName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PirateCrew.Ship" class="control-label"></label>
                <input asp-for="PirateCrew.Ship" class="form-control" />
                <span asp-validation-for="PirateCrew.Ship" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Pirate Crew" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}